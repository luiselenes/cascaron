<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps"
    android:fitsSystemWindows="true"
    tools:context=".jefeObraActivity">


    <Button
        android:id="@+id/btncerrars"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/background5"
        android:text="CERRAR SESION"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="55.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/teamwork" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/amiko_bold"
        android:text="Jefe de Obra"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnModificarListaInsumos"
        android:layout_width="253dp"
        android:layout_height="90dp"
        android:background="@drawable/background5"
        android:text="Ver lista de insumos"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/btnCreaListaInsumos"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnCreaproyecto"
        app:layout_constraintTop_toTopOf="@+id/btnCreaproyecto" />

    <Button
        android:id="@+id/btnCreaproyecto"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/background5"
        android:text="Crear Proyecto"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/btnModificarListaInsumos"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btnCreaListaInsumos"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:background="@drawable/background5"
        android:text="Crear lista de insumos"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnModificarListaInsumos"
        app:layout_constraintTop_toTopOf="@+id/btnModificarListaInsumos" />


</androidx.constraintlayout.widget.ConstraintLayout>