<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps"
    android:fitsSystemWindows="true"
    tools:context=".activityAlmacenista">

    <Button
        android:id="@+id/btn_procesarrequisicioni"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_marginTop="328dp"
        android:layout_weight="0.5"
        android:background="@drawable/background5"
        android:drawablePadding="1sp"
        android:text="PROCESAR REQUISICION DE INSUMO"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/btngestioninsumo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btngestioninsumo"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_weight="0.5"
        android:background="@drawable/background5"
        android:drawablePadding="1sp"
        android:text="GESTION INSUMOS"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_procesarrequisicioni"
        app:layout_constraintTop_toTopOf="@+id/btn_procesarrequisicioni" />

    <Button
        android:id="@+id/btncerrars"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/background5"
        android:text="CERRAR SESION"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="55.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/teamwork" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/amiko_bold"
        android:text="Almacenista"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btnEntradaInsumos"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_marginTop="200dp"
        android:layout_weight="0.5"
        android:background="@drawable/background5"
        android:drawablePadding="1sp"
        android:text="Entrada insumos"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/btnBuscarInsumo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btnReporte"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_weight="0.5"
        android:background="@drawable/background5"
        android:drawablePadding="1sp"
        android:text="Reporte "
        android:textColor="@color/white"

        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnBuscarInsumo"
        app:layout_constraintTop_toTopOf="@+id/btnBuscarInsumo" />

    <Button
        android:id="@+id/btnBuscarInsumo"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_weight="0.5"
        android:background="@drawable/background5"
        android:drawablePadding="1sp"
        android:text="Inventario"
        android:textColor="@color/white"
        android:textSize="18dp"

        app:layout_constraintEnd_toStartOf="@+id/btnReporte"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnEntradaInsumos"
        app:layout_constraintTop_toTopOf="@+id/btnEntradaInsumos" />

</androidx.constraintlayout.widget.ConstraintLayout>